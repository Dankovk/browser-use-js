{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"lib": ["es2020", "dom"],
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"browser-use-node": ["./src"],
			"browser-use-node/*": ["./src/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "examples/**/*"],
	"exclude": ["node_modules", "dist"]
}
